@model GerenciadorDeTarefas.Models.ViewModels.ListaDeTarefaViewModel

@{
    ViewData["Title"] = "DeletarListaDeTarefas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<body>
    <h3>Tem certeza que deseja excluir esta Lista?</h3>
    <div>
        <form asp-action="Delete">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dt class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dt>
            </dl>
            <input type="submit" value="Excluir" class="btn btn-danger" onclick="verificatarefas()" />
        </form>   
        <a asp-action="Edit" asp-controller="ListaDeTarefas" asp-route-Id="@Model.Id ">Voltar</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <script type="text/javascript">

            $(document).ready(function () {
                function verificatarefas() {
                    if (Model.Tarefas.Count > 0) {
                        alert("Existem tarefas cadastradas nesta lista. Tem certeza que deseja excluí-la?");
                    }
                }
            }
        </script>
    }


</body>
</html>
